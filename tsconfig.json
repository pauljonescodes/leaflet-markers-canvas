{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    // begin custom
    "target": "ES5",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
    // end custom
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
